
@{
    ViewData["Title"] = "DeleteDepartment";
}

<div class="row" style="padding-top: 2%;">
    <div class="col-8 grid-margin stretch-card align-content-center">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Department</h4>
                <div class="alert alert-danger">
                    <p>Are you sure you want to delete the department : <strong>Information Technology</strong>?</p>
                </div>
             
                <form asp-action="Delete" class="forms-sample" method="post">.
                    <div class="form-group">
                    <input type="hidden" />
                    </div>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ViewDepartments" asp-controller="Department" class="btn btn-light">Cancel</a>
            
                </form>
            </div>
        </div>
    </div>
</div>


