@model IEnumerable<DepartmentModel>
@{
    ViewData["Title"] = "Departments";
}
<div class="row" style="padding-top: 2%;">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">All Departments</h2>
                  <p class="card-description">
                   Enter the Name of the department 
                  </p>
                <form class="form-inline" asp-controller="Department" asp-action="ViewDepartments" method="post">
                    <label class="sr-only" for="inlineFormInputName2">Name</label>
                    <input type="text" name="departName" class="form-control mb-2 mr-sm-2" id="exampleInputName1" placeholder="Information Technology">
                  
                    <button type="submit" class="btn btn-primary mb-2">Create</button>
                  </form>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Incharge Name</th>
                                <th>Administrator Name</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                              @foreach (var department in Model)
                              {
                            <tr>
                                <td>@department.DepartName</td>
                                <td>@department.InchargeName</td>
                                <td>@department.AdminName</td>
                                    <td>@department.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <!-- Default switch -->
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitches">
                                        <label class="custom-control-label" for="customSwitches"></label>
                                    </div>

                             </td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-action="EditDepartment" asp-controller="Department">Edit</a> |
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteDepartment" asp-controller="Department">Delete</a>
                                    <a class="btn btn-info btn-sm" asp-action="DeleteDepartment" asp-controller="Department">Settings</a>
                                </td>
                            </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
        $(document).ready(function () {
            alert("Bilal ");
        });


        var switchElement = document.getElementById('customSwitches');
        switchElement.addEventListener('change', function () {
        var isChecked = switchElement.checked;

        // Additional logic: Perform actions based on the active state
        if (isChecked) {
            // Perform actions when active
            console.log('Switch is active');
        } else {
            // Perform actions when inactive
            console.log('Switch is inactive');
        }
    });
</script>


