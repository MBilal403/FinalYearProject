@{
    Layout = "~/Views/Shared/_FullLayout.cshtml";  
    ViewData["FullTitle"] = "Forgot Password";
    var mymessage = ViewBag.MyMessage;
}

<div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
        <div class="card col-lg-4 mx-auto">
            <div class="card-body auth-form-light text-left py-5 px-4 px-sm-5">
                
                <form class="pt-3" asp-action="ForgotPassword" asp-controller="Auth" method="post">
                    @Html.AntiForgeryToken()
                      <div class="brand-logo">
                        <img src="/images/logo.svg" alt="logo">
                      </div>
                          <h4>Hello! Welcome to EduSpace

                          </h4>
                      <h6 class="font-weight-light">
                          Forgot Password
                      </h6>
                      <p class= "text-danger">@mymessage</p>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Email Address" required>
                      
                        <label for="exampleInputEmail1">Date Of Birth</label>
                        <input type="date" class="form-control" id="exampleInputEmail1" name="dateofbirth" placeholder="Date of birth" required>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }

             
                        <div class="mt-3">
                                <button type="Submit" class="btn btn-block btn-primary font-weight-medium auth-form-btn">Send Mail</button>
                        </div>
                </form>
                <div class="my-1 d-flex justify-content-between align-items-center"></div>
                

            <div class="text-center mt-4 font-weight-light">
                Go back to <a  class="text-primary">Login</a>
            </div>
            </div>
          </div>
        </div>
</div>
