
@{
    Layout = "~/Views/Shared/_FullLayout.cshtml";  
    ViewData["FullTitle"] = "Login";
    var mymessage = ViewBag.MyMessage;
}
<div class="container-scroller">
    <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
            <div class="card col-lg-4 mx-auto">
                <div class="card-body auth-form-light text-left py-5 px-4 px-sm-5">
                
                    <form class="pt-3" id="loginForm" asp-controller="Auth" asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                          <div class="brand-logo">
                            <img src="/images/logo.svg" alt="logo">
                          </div>
                              <h4>Hello! Welcome to Bil

                              </h4>
                          <h6 class="font-weight-light">
                              Sign in to continue.
                          </h6>
                          <p class= "text-danger">@mymessage</p>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" name="LoginEmailInput" placeholder="Email Address" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="LoginpasswordInput" placeholder="Password">
                        </div>
                            <div class="mt-3">
                                    <button type="Submit" class="btn btn-block btn-primary font-weight-medium auth-form-btn">SIGN IN</button>
                            </div>
                    </form>
                    <div class="my-1 d-flex justify-content-between align-items-center"></div>
                    <div>
                    <a  asp-action="ForgotPassword" asp-controller="Auth" class="auth-link text-black">Forgot password?</a>
                </div>

                <div class="text-center mt-4 font-weight-light">
                    Don't have an account? <br> Contact to your repective department administrator 
                </div>
                </div>
              </div>
            </div>
    </div>
</div>
